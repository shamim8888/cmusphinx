#!/bin/sh
S2CONTINUOUS=@prefix@/bin/pocketsphinx_continuous
HMM=@prefix@/share/pocketsphinx/model/hmm/en_US/wsj_sc_8k
LMFILE=@prefix@/share/pocketsphinx/model/lm/en_US/wsj0vp.5000.DMP
DICT=@prefix@/share/pocketsphinx/model/lm/en_US/cmu07a.dic

echo " "
echo "pocketsphinx_wsj:"
echo "  Demo CMU PocketSphinx decoder with 5000-word connected dictation."
echo " "

echo "<executing $S2CONTINUOUS, please wait>"
$S2CONTINUOUS \
	-fwdflat no -bestpath no \
	-lm ${LMFILE} \
	-dict ${DICT} \
        -hmm ${HMM} \
	-samprate 8000 \
	-nfft 256 $@
