# S3ROOT = /net/alf20/usr/rkm/s3
AFSS3  = /afs/cs/project/plus-2/s3

include $(S3ROOT)/Makefile.defines
VPATH = .:..


TARGET = s3dag

OBJS =	logs3.o \
	dict.o \
	mdef.o \
	lm.o \
	fillpen.o \
	dag.o \
	dag-main.o

CFLAGS = ${$(MACHINE)_CFLAGS}

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -L$(LIBDIR) -o $(TARGET) $(OBJS) -lutil -lio -lfeat -lm
	rm dag-main.o

install: $(TARGET)
	cp $(TARGET) $(BINDIR)

afs: $(TARGET)
	cp $(TARGET) $(AFSS3)/bin/$(MACHINE)

clean:
	rm -f *.o *.a *.BAK *.CKP .*.BAK .*.CKP *~ .*~ #*#
