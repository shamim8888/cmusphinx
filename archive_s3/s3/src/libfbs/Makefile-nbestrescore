# S3ROOT = /net/alf20/usr1/rkm/s3
AFSS3  = /afs/cs/project/plus-2/s3

include $(S3ROOT)/Makefile.defines
VPATH = .:..


TARGET = s3nbestrescore

OBJS =	agc.o \
	cmn.o \
	gauden.o \
	senone.o \
	interp.o \
	tmat.o \
	logs3.o \
	vector.o \
	dict.o \
	mdef.o \
	misc.o \
	nbestrescore.o \
	nbestrescore-main.o

CFLAGS = $(S3DEBUG) ${$(MACHINE)_CFLAGS}

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -L$(LIBDIR) -o $(TARGET) $(OBJS) -lutil -lio -lfeat -lm

install: $(TARGET)
	- mv $(BINDIR)/$(TARGET) $(BINDIR)/$(TARGET).old
	cp $(TARGET) $(BINDIR)
	rm -f $(BINDIR)/$(TARGET).old

afs: $(TARGET)
	- mv $(AFSS3)/bin/$(MACHINE)/$(TARGET) $(AFSS3)/bin/$(MACHINE)/$(TARGET).old
	cp $(TARGET) $(AFSS3)/bin/$(MACHINE)
	rm $(AFSS3)/bin/$(MACHINE)/$(TARGET).old

clean:
	rm -f *.o *.a *.BAK *.CKP .*.BAK .*.CKP *~ .*~ #*#
